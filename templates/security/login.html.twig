{% extends 'base.html.twig' %}

{% block title %} Gestion reservation  {% endblock %}
{% block stylesheets %} {{parent()}}

    <style type="text/css">
    </style>
{% endblock %}


{% block body %}
    <body class="nav-md">
    <div class="container body">
        <div class="main_container">

            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="#" class="site_title"><i class="fa fa-paw"></i> <span>Greservation</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->

                    <div class="profile clearfix">

                    </div>

                    <!-- /menu profile quick info -->

                    <br>

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">

                            <ul class="nav side-menu" style="">
                                {% block menu_section %}

                                {% endblock %}
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>



            <!-- top navigation c est dans cette partie que je vais mettre le header -->
            {% block navbar %}
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>

                        </div>
                        <h1 style="margin-left: 20%;">Connecter vous et Gerer les reservations des etudiants</h1>

                    </nav>
                </div>
            {% endblock %}
            <!-- /top navigation -->


            <!-- page content -->
            <div class="right_col" role="main" style="min-height: 2095px;">
                {% block res_body %}
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                        <label for="inputLogin">Login</label>
                        <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}

                        <button class="btn btn-lg btn-primary" type="submit">
                            Se Connecter
                        </button>
                    </form>
                {% endblock %}


                <!-- top tiles -->
                <div class="row tile_count">
                    <!-- je vais mettre ici mon  header -->
                    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">

                    </div>
                    {% block footer %}
                        <!-- footer content -->
                        <footer class="container-fluid">
                            <h2>Contactez l'ODC</h2>
                            <span class="glyphicon glyphicon-earphone"></span>  +221 33 839 21 00
                            <br>

                            <span class="glyphicon glyphicon-globe"></span>        https://www.academysonatel.com//
                            <br>
                            <span class="glyphicon glyphicon-map-marker"></span> Orange Digital center
                            <br>
                            <span class="glyphicon glyphicon-time"></span>  08h-12h et 15h-18h
                            <br>
                            <br>
                            <div class="text-center" style="background-color:black;">
                                Copyright © 2020 ODC <br>
                                Site conçu et réalisé par Samba Drame et Ahmadou Sakhir Fall
                            </div>


                        </footer>
                        <!-- /footer content -->
                    {% endblock %}
                </div>
            </div>
            <!-- /page content -->
        </div>
    </div>
    </body>

{% endblock %}
